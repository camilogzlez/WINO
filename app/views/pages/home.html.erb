<div style="postition: relative; ">

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon p-5" style="position:absolute">
    <%= link_to "#", class: "navbar-brand" do %>
      <img src="assets/logo" alt="">
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>


  <div class="banner mt-0" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(assets/banner-background-image);">
    <div class="container">
      <h1>A perfect place to have a perfect Wine Experience</h1>
      <p>Enjoy the wonderful world of wine with all your senses </p>
      <%= link_to "See all experiences", wine_experiences_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="container mt-3 mb-3">

    <div class="card-deck">
      <% @few_wine_experience.each do |experience| %>
        <a class="col-3" type="button" data-toggle="modal" data-target="#experience_modal_<%= experience.id %>" style="text-decoration: none;">
          
          <div class="card m-2">
            <img class="card-img" src="https://www.millbrookwine.com/wp-content/uploads/2020/03/Millbrook-Wine_Pinot-Noir_2015.jpg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= experience.title %></h5>
            </div>
            <div class="card-footer">
              <small class="text-muted"><i class="fas fa-dollar-sign"></i><strong><%= experience.price %></strong></small>

            </div>
          </div>
        </a>

        <!-- Modal -->
        <div class="modal fade" id="experience_modal_<%= experience.id %>" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog  modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><%= experience.title %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body container">
                <div class="row no-gutters">
                  <div class="col-sm-5">
                    <img class="card-img" src="https://www.millbrookwine.com/wp-content/uploads/2020/03/Millbrook-Wine_Pinot-Noir_2015.jpg" alt="">
                  </div>
                  <div class="">
                    <div class="card-body">
                      <p class="card-text"><%= experience.description %></p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer justify-content-between">
                <small class="text-muted"><i class="fas fa-dollar-sign"></i><strong><%= experience.price %></strong></small>
                <%= link_to "More details", wine_experience_path(experience), class: "btn btn-success" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>

</div>