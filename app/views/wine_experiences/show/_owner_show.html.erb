<div>

  <div class="container">
    <div class="d-flex justify-content-between">
      <p class="mb-3 mt-2 text-black-50"> <%= link_to "Home", root_path %>  > <%= link_to "WineExperiences", wine_experiences_path%> > <%= @wine_experience.title %> </p>
  </div>

  <div class="card-trip row">
    <div class="col-md-3 col-sm-12">
      <div class="product-images d-inline">
        <% @wine_experience.photos.each do |photo| %>
          <%= cl_image_tag photo.key, class:"mx-auto d-block border" %>
        <% end %>
      </div>
    </div>
    
    <div class="col-md-6 col-sm-12">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
        
          <% @wine_experience.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= "active" if index.zero? %> mt-5">
              <%= cl_image_tag photo.key, height: "700px", class: "rounded w-100" %>
            </div>
          <% end %>
        </div>  
      </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="card-trip-infos text-center col-md-3 col-sm-12">
      <div class="my-5 ml-5">
          <h2><%= @wine_experience.title %>  &#127863</h2>
          <span class="wine-description"><%= @wine_experience.description %></span>
          <h6 class= "date mt-5" >&#128198 Fecha: 
          <br>
          <strong>&#128204<%= time_tag(@wine_experience.date) %></strong></h6>
        <p>Precio: <%= @wine_experience.price %> Arg</p>
        <br>
        <br>
      <%= link_to wine_experience_bookings_path(@wine_experience), method: :post, id: "book-link", class: "hidden"  do %>
      <% end %>
      </div>
      
    </div>
      
  </div>

    <div class="container border rounded p-3 m-5">
      <h3>All info</h3>

      Total collected: <i class="fas fa-dollar-sign"></i> <strong><%= @collected %></strong>
      <br>
      Users how pay:
      <div class="p-5">
      
        <ul class="list-group list-group-flush">
          <% @wine_experience.bookings.each do |booking| %>
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <%= booking.client.email %>
                <%= link_to "Cancel", wine_experiences_path, class:"btn btn-outline-danger rounded" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

  </div>

  <div class="container">
        <div id="map"
            style="width: 100%; height: 300px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
  </div>

</div>


