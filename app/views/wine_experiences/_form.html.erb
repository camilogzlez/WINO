
<div class="container pb-3">
    <%= simple_form_for(wine_experience) do |f| %>
        <%= f.input :title, placeholder: "Título de tu evento", label_html: { class: "text-white"} %>
        <%= f.input :description, as: :text, class:"label", placeholder: "Contanos de tu evento ... Cualquier detalle que enamore a las personas para que se sumen al evento.", label_html: { class: "text-white"} %>
        <%= f.input :address, placeholder: "¿Dónde se desarrollará tu evento?", label_html: { class: "text-white"} %>
        <%= f.input :price, as: :numeric, placeholder: "¿Cuánto costará tu evento?", label_html: { class: "text-white"} %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"}, placeholder: "Agrega la fecha del evento", label_html: { class: "text-white"} %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }, label_html: { class: "text-white"} %>

        <%= f.submit "Compartí tu evento", disable_with: 'Submiting...', class: "btn btn-success" %>
    <% end %>   
</div>
