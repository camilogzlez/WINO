<div>
  <div>
    <div class="d-flex justify-content-between">
      <p> <%= link_to "Home", root_path %>  > <%= link_to "WineExperiences", wine_experiences_path%> > <%= @wine_experience.title %> </p>
  </div>

      <div class="btn btn-success m-3"><%= link_to link_to "Volver a todas las experiencias", wine_experiences_path %> </div>
  <div class="card-trip row">
    <div class="col-md-3 col-sm-12">
      <div class="product-images d-inline">
        <% @wine_experience.photos.each do |photo| %>
          <%= cl_image_tag photo.key, class:"mx-auto d-block border" %>
        <% end %>
      </div>
    </div>
    
    <div class="col-md-6 col-sm-12">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
        
          <% @wine_experience.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= "active" if index.zero? %> mt-5">
              <%= cl_image_tag photo.key, height: "700px", class: "w-100 rounded" %>
            </div>
          <% end %>
        </div>  
      </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="card-trip-infos text-center col-md-3 col-sm-12">
      <div class="m-5">
          <h2><%= @wine_experience.title %></h2>
          <p><%= @wine_experience.description %></p>
          <h6 class= date >Fecha: 
          <br>
          <br>
          <strong><%= time_tag(@wine_experience.date) %></strong></h6>
      </div>
        <span class="card-trip-pricing"><%= @wine_experience.price %> Arg</span>
      <button id="sweet-alert-demo" class="btn btn-gray">Reservar Ahora</button>
      <%= link_to "", wine_experience_bookings_path(@wine_experience), method: :post, id: "book-link", class: "hidden" %>

    </div>
      
  </div>
   

  <div class="container">
        <div id="map"
            style="width: 100%; height: 600px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
  </div>

</div>


