<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
  
    <div class="carousel-item active">
    <% if @wine_experience.photos[2] %>

      <%= cl_image_tag @wine_experience.photos[0].key, alt: "First slide", class: "img-vino", height: 550  %>

      </div>
      <div class="carousel-item">
      <%= cl_image_tag @wine_experience.photos[1].key, alt: "Second slide", class: "img-vino", height: 550   %>
      </div>
      <div class="carousel-item">
        <%= cl_image_tag @wine_experience.photos[2].key, alt: "Third slide", class: "img-vino", height: 550   %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
